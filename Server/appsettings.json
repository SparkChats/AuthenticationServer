{
  "ConnectionStrings": {
    "Postgres": "Host=postgresdb;Port=5432;Database=SparkleDb;Username=postgres;Password=mysecretpassword"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IdentityServer": {
    "AccessTokenLifetime": 3600,
    "RedirectUris": [ "https://sparkle.net.ua/signin-oidc" ],
