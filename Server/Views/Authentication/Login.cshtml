@using Sparkle.Identity.Requests;
@model LoginRequest
<head>
    <meta charset="UTF-8">
    <title>Sparkle - Sign in</title>
    <link href=@Url.Content("~/wwwroot/styles/app.css") rel="stylesheet" type="text/css"/>
</head>
<body>
<div class="screen-container">
    <div class="panel" style="width: 980px; height: 543px;">
        <h1>Welcome back!</h1>
        <h3>We are so glad to see you again!</h3>
        <form asp-controller="Authentication" asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl"/>
            <div class="input-container">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="input"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="input-container">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="input"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="input-container">
                <input type="submit" value="Sign In">
            </div>
            <div class="input-container">
                @Html.ValidationSummary(true, String.Empty, new { @class = "text-danger" })
            </div>
            <div class="input-container">
                <span>
                    Need an account?
                    <a asp-controller="Authentication" asp-action="Register"
                       asp-route-returnUrl="@Model.ReturnUrl">
                        Register
                    </a>
                </span>
            </div>
        </form>
    </div>
</div>
</body>